#demonstrating recursion in kin-lang


porogaramu_ntoya factorial(umubare) {
    niba (umubare == 1 || umubare == 0) {
        tanga 1;
    }niba_ataribyo {
        tanga umubare * factorial(umubare - 1);
    }
}


umubare1 = 10;

ibisubizo = factorial(umubare1);

tangaza_amakuru `${ibisubizo}`;